@using BookMyMovies.Constants;
@model IEnumerable<BookMyMovies.Models.MoviePosting>

<h1 class="text-center m-5">All Available Movies</h1>
@if (TempData["BookingMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["BookingMessage"]
        @if (TempData["PDFTicketPath"] != null)
        {
            <br />
            <a class="btn btn-sm btn-primary mt-2" href="@TempData["PDFTicketPath"]" target="_blank">Download Ticket PDF</a>
        }
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Employer))
{
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Create Movie</a>
    </div>
}
<div class="row">
    @foreach (var moviePosting in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow movie-card" id="movie-posting-@moviePosting.Id">
                <img src="@moviePosting.ImageUrl" class="card-img-top img-fluid movie-poster" alt="@moviePosting.Title Poster" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@moviePosting.Title</h5>
                    <p class="card-text">@moviePosting.Description</p>
                    <ul class="list-unstyled small mb-3">
                        <li><strong>Theater:</strong> @moviePosting.Theater</li>
                        <li><strong>Location:</strong> @moviePosting.Location</li>
                        <li><strong>Date:</strong> @moviePosting.PostedDate.ToShortDateString()</li>
                        <li><strong>Seats:</strong> @moviePosting.SeatsAvailable / @moviePosting.TotalSeats</li>
                        <li><strong>Price:</strong> ₹@moviePosting.Price</li>
                        <li>
                            <strong>Seat Availability Status:</strong>
                            <span class="badge @(moviePosting.IsSeatAvailable ? "bg-success text-white" : "bg-danger text-white")">
                                @(moviePosting.IsSeatAvailable ? "Available" : "Not Available")
                            </span>
                        </li>
                    </ul>

                    <div class="mt-auto">
                        @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Employer))
                        {
                            <button onclick="deleteMoviePosting(@moviePosting.Id)" class="btn btn-outline-danger btn-sm w-100 mb-2">Delete</button>
                        }
                        @if (User.IsInRole(Roles.User))
                        {
                            <a asp-action="BookTicket" asp-route-id="@moviePosting.Id" class="btn btn-success btn-sm w-100">Book Now</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function deleteMoviePosting(id) {
            if (confirm("Are you sure you want to delete this movie posting?")) {
                $.ajax({
                    url: "@Url.Action("Delete", "MoviePostings")/" + id,
                    type: "DELETE",
                    success: function () {
                        $("#movie-posting-" + id).remove();
                    },
                    error: function () {
                        alert("An error occurred while deleting the movie.");
                    }
                });
            }
        }
    </script>
    
}
