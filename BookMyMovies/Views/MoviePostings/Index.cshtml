@using BookMyMovies.Constants;
@model IEnumerable<BookMyMovies.Models.MoviePosting>

<div class="container">
    @if (!User.IsInRole(Roles.Employer) && !User.IsInRole(Roles.Admin))
    {
        var latestMovies = Model.Take(3).ToList();
        <div id="movieCarousel" class="carousel slide mb-5 shadow-sm rounded" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-inner">
                @for (int i = 0; i < latestMovies.Count; i++)
                {
                    var movie = latestMovies[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <a asp-action="Details" asp-route-id="@movie.Id">
                            <img src="@movie.ImageUrl" class="d-block w-100" style="height: 400px; object-fit: cover;" alt="@movie.Title" />
                            <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded">
                                <h5>@movie.Title</h5>
                                <p>@(movie.Description.Length > 100 ? movie.Description.Substring(0, 100) + "..." : movie.Description)</p>
                            </div>
                        </a>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#movieCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#movieCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    }

</div>
<h1 class="text-center m-5">All Available Movies</h1>
@if (TempData["BookingMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["BookingMessage"]
        @if (TempData["PDFTicketPath"] != null)
        {
            <br />
            <a class="btn btn-sm btn-primary mt-2" href="@TempData["PDFTicketPath"]" target="_blank">Download Ticket PDF</a>
        }
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Employer))
{
    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-primary">+ Create Movie</a>
    </div>
}
<div class="row">
    @foreach (var moviePosting in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow rounded movie-card" id="movie-posting-@moviePosting.Id">
                <img src="@moviePosting.ImageUrl" class="card-img-top img-fluid movie-poster" alt="@moviePosting.Title Poster" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@moviePosting.Title</h5>
                    <p class="card-text">
                        <span id="short-desc-@moviePosting.Id">
							@(moviePosting.Description.Length > 100 ? moviePosting.Description.Substring(0, 100) + "..." : moviePosting.Description)
                        </span>
                        <span id="full-desc-@moviePosting.Id" style="display: none;">
                            @moviePosting.Description
                        </span>
                        @if(moviePosting.Description.Length > 100)
                        {
                            <button class="btn p-2 btn-sm shadow-sm "
                                    id="toggle-btn-@moviePosting.Id"
                                    type="button" onclick="toggleDescription(@moviePosting.Id)" data-state="collapsed">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-up" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M7.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708L8 5.707l-5.646 5.647a.5.5 0 0 1-.708-.708z" />
                                </svg>
                            </button>
                        }
                    </p>
                    <ul class="list-unstyled small mb-3">
                        <li><strong>Theater:</strong> @moviePosting.Theater</li>
                        <li><strong>Location:</strong> @moviePosting.Location</li>
                        <li><strong>Date:</strong> @moviePosting.PostedDate.ToShortDateString()</li>
                        <li><strong>Seats:</strong> @moviePosting.SeatsAvailable / @moviePosting.TotalSeats</li>
                        <li><strong>Price:</strong> ₹@moviePosting.Price</li>
                        <li>
                            <strong>Seat Availability Status:</strong>
                            <span class="badge @(moviePosting.IsSeatAvailable ? "bg-success text-white" : "bg-danger text-white")">
                                @(moviePosting.IsSeatAvailable ? "Available" : "Not Available")
                            </span>
                        </li>
                    </ul>

                    <div class="mt-auto">
                        @if (User.IsInRole(Roles.Admin) || User.IsInRole(Roles.Employer))
                        {
                            <a asp-action="Edit" asp-route-id="@moviePosting.Id" class="btn btn-outline-warning btn-sm w-100 mb-2 shadow-sm rounded-pill">Edit</a>
                            <button onclick="deleteMoviePosting(@moviePosting.Id)" class="btn btn-outline-danger btn-sm w-100 mb-2 shadow-sm rounded-pill">Delete</button>
                        }

                        @if (User.IsInRole(Roles.User))
                        {
                            <a asp-action="BookTicket" asp-route-id="@moviePosting.Id" class="btn btn-success btn-sm w-100">Book Now</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>




@section Scripts {
    <script>
        function deleteMoviePosting(id) {
            if (confirm("Are you sure you want to delete this movie posting?")) {
                $.ajax({
                    url: "@Url.Action("Delete", "MoviePostings")/" + id,
                    type: "DELETE",
                    success: function () {
                        $("#movie-posting-" + id).remove();
                    },
                    error: function () {
                        alert("An error occurred while deleting the movie.");
                    }
                });
            }
        }

            function toggleDescription(id) {
            const shortDesc = document.getElementById(`short-desc-${id}`);
            const fullDesc = document.getElementById(`full-desc-${id}`);
            const button = document.getElementById(`toggle-btn-${id}`);
            const isCollapsed = button.getAttribute("data-state") === "collapsed";

            if (isCollapsed) {
                shortDesc.style.display = "none";
                fullDesc.style.display = "inline";
                button.setAttribute("data-state", "expanded");
                button.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-chevron-up" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1.646 11.354a.5.5 0 0 0 .708 0L8 5.707l5.646 5.647a.5.5 0 0 0 .708-.708l-6-6a.5.5 0 0 0-.708 0l-6 6a.5.5 0 0 0 0 .708z"/>
                    </svg>`;
            } else {
                shortDesc.style.display = "inline";
                fullDesc.style.display = "none";
                button.setAttribute("data-state", "collapsed");
                button.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                         class="bi bi-chevron-down" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
                    </svg>`;
            }
        }


    </script>
    
}
