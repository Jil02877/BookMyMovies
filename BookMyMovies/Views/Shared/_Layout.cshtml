<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookMyMovies</title>
    <script type="importmap"></script>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookMyMovies.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="MoviePostings" asp-action="Index">
                    <img src="~/svgs/logo.svg" alt="Logo" style="height: 40px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div>
                         <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MoviePostings" asp-action="Index">Home</a>
                        </li>

                        @if(User.IsInRole("Admin") || User.IsInRole("Employer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="MoviePostings" asp-action="Create">Create Movie</a>
                            </li>
                            }
                        @if (User.IsInRole("User"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Bookings" asp-action="History">My Bookings</a>
                                </li>
                            }
                         </ul>
                    </div>
                    <div>
                          <ul class="navbar-nav flex-grow-1">
                            @if (User.Identity.IsAuthenticated)
                            {
                                var email = User.Identity.Name;
                                var username = email?.Split('@')[0];

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        @username
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                        <li>
                                            <button class="dropdown-item d-flex align-items-center gap-2" id="themeToggleBtn">
                                                <i id="themeIcon" class="bi bi-sun-fill"></i>
                                                <span id="themeLabel">Switch to Dark Mode</span>
                                            </button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item d-flex align-items-center gap-2" id="musicToggleBtn">
                                                <i id="musicIcon" class="bi bi-volume-up-fill"></i>
                                                <span id="musicLabel">Mute</span>
                                            </button>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout">Logout</a>
                                        </li>
                                    </ul>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                                </li>
                            }

                            </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 flex-grow-1 m-3 shadow-sm rounded">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2025 - BookMyMovies 
        </div>
    </footer>

        <audio id="backgroundMusic" autoplay loop>
        <source src="~/music/background.mp3" type="audio/mpeg">
        </audio>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        const toggleBtn = document.getElementById('themeToggleBtn');
        const themeLabel = document.getElementById('themeLabel');
        const themeIcon = document.getElementById('themeIcon');
        const body = document.body;

        const musicBtn = document.getElementById('musicToggleBtn');
        const musicIcon = musicBtn.querySelector('i');
        const musicLabel = musicBtn.querySelector('span');
        const music = document.getElementById('backgroundMusic');

        function applyTheme(isDark) {
            themeLabel.textContent = isDark ? 'Switch to Light Mode' : 'Switch to Dark Mode';
            themeIcon.className = isDark ? 'bi bi-sun-fill' :  'bi bi-moon-stars-fill';
        }

        // On page load
        const storedTheme = localStorage.getItem('theme');
        if (storedTheme === 'dark') {
            body.classList.add('dark-mode');
            applyTheme(true);
        } else {
            applyTheme(false);
        }

        toggleBtn?.addEventListener('click', () => {
            const isDark = body.classList.toggle('dark-mode');
            localStorage.setItem('theme', isDark ? 'dark' : 'light');
            applyTheme(isDark);
        });

        // Mute/Unmute functionality
        musicBtn?.addEventListener('click', () => {
            if (music.muted) {
                music.muted = false;
                musicIcon.className = 'bi bi-volume-mute-fill' ;
                musicLabel.textContent = 'Mute';
            } else {
                music.muted = true;
                musicIcon.className = 'bi bi-volume-up-fill' ;
                musicLabel.textContent = 'Unmute';
            }
        });

        // Auto-play workaround for browsers that block autoplay with sound
        document.addEventListener('click', function enableAudioOnce() {
            music.play().catch(() => { });
            document.removeEventListener('click', enableAudioOnce);
        });
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
